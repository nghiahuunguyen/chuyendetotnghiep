@{
    ViewBag.Title = "Xác thực OTP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center text-primary">Xác thực Email</h2>
                <p class="text-center">Nhập mã OTP được gửi qua email <strong>@ViewBag.Email</strong></p>

                @if (!string.IsNullOrEmpty(ViewBag.OTPError))
                {
                    <div class="alert alert-danger text-center">@ViewBag.OTPError</div>
                }

                <form action="/Register/VerifyOTP" method="post">
                    <div class="form-group">
                        <label for="otpInput">Mã OTP:</label>
                        <input type="text" id="otpInput" name="otpInput" class="form-control text-center"
                               placeholder="Nhập mã OTP" required maxlength="6">
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-3">Xác nhận</button>
                </form>

                <div class="text-center mt-3">
                    <p>Không nhận được mã? <a href="/Register/ResendOTP" class="text-danger">Gửi lại OTP</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
