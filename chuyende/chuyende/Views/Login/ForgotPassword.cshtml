@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="forgot-password-container">
    <h2>Quên Mật Khẩu</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <form method="post">
        <div class="form-group">
            <label>Email của bạn:</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Gửi Mã Xác Nhận</button>
    </form>
</div>

<style>
    /* ===== CĂN CHỈNH TRANG QUÊN MẬT KHẨU ===== */
    .forgot-password-container {
        max-width: 400px; /* Giảm kích thước để nhỏ hơn */
        margin: 100px auto; /* Căn giữa theo chiều ngang và có khoảng cách trên dưới */
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        /* Tiêu đề */
        .forgot-password-container h2 {
            color: #333;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* Input và Button */
        .forgot-password-container .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        .forgot-password-container label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .forgot-password-container input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .forgot-password-container button {
            width: 100%;
            background: #007bff;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            .forgot-password-container button:hover {
                background: #0056b3;
            }

    /* Thông báo lỗi */
    .alert-danger {
        background: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
    }
</style>
