@model IEnumerable<chuyende.Models.LoaiSanPham>

@{
    ViewBag.Title = "Danh sách loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h3>Danh sách loại sản phẩm</h3>
    <div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="custom-alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="custom-alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }


    </div>

    <div class="actions">
        <a href="@Url.Action("Create", "LoaiSanPhams")" class="add-btn">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
        <a href="@Url.Action("Trash", "LoaiSanPhams")" class="trash-btn">
            <i class="fas fa-trash"></i> Thùng rác
        </a>

    </div>
        

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Mã loại sản phẩm</th>
                <th>Tên loại sản phẩm</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@Html.DisplayFor(modelItem => item.MaLoaiSP)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenLoaiSP)</td>
                    <td class="action-icons">
                        <a href="@Url.Action("Edit","LoaiSanPhams", new { id = item.MaLoaiSP })" class="btn-icon edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Details","LoaisanPhams", new { id = item.MaLoaiSP })" class="btn-icon view">
                            <i class="fas fa-eye"></i>
                        </a>
                        @using (Html.BeginForm("MoveToTrash", "LoaSanPhams", new { id = item.MaLoaiSP }, FormMethod.Post, new { @class = "delete-form" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-icon delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        }
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>
