@model IEnumerable<chuyende.Models.LoaiSanPham>

@{
    ViewBag.Title = "Danh sách loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h3>Danh sách loại sản phẩm</h3>
    <div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="custom-alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="custom-alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }


    </div>

        <div class="actions">
            <a href="@Url.Action("Create", "LoaiSanPhams")" class="add-btn">Thêm mới</a>
        </div>
    
        

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Mã loại sản phẩm</th>
                <th>Tên loại sản phẩm</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@Html.DisplayFor(modelItem => item.MaLoaiSP)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenLoaiSP)</td>
                    <td class="action-icons">
                            <a href="@Url.Action("Edit","LoaiSanPhams", new { id = item.MaLoaiSP })">
                                <i class="fas fa-edit edit"></i>
                            </a>
                        
                        <a href="@Url.Action("Details","LoaiSanPhams", new { id = item.MaLoaiSP })">
                            <i class="fas fa-eye view"></i>
                        </a>
                            <a href="@Url.Action("Delete","LoaiSanPhams", new { id = item.MaLoaiSP })">
                                <i class="fas fa-trash delete"></i>
                            </a>
                           
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>
