@model chuyende.Models.KhachHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h3>Bạn có chắc chắn muốn xóa mục này không?</h3>

    <table>
        <thead>
            <tr>
                <th>Tên khách hàng</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.TenKH)</td>
                <td>@Html.DisplayFor(model => model.DiaChi)</td>
                <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
            </tr>
        </tbody>
    </table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions">
        <button type="submit" class="delete">Xác nhận</button>
        <button type="button" class="cancel-btn btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "KhachHangs")'">Hủy</button>

    </div>
}

</div>