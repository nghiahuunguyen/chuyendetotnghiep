@model IEnumerable<chuyende.Models.ChucVu>

@{
    ViewBag.Title = "Chức vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h3>Danh sách chức vụ</h3>
   
    <div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="custom-alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="custom-alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }


    </div>

    <div class="actions">
        <a href="@Url.Action("Create", "ChucVus")" class="add-btn">Thêm mới</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Mã chức vụ</th>
                <th>Tên chức vụ</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>@Html.DisplayFor(modelItem => item.MaCV)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenCV)</td>
                    <td class="action-icons">
                        <a href="@Url.Action("Edit","ChucVus", new { id = item.MaCV })">
                            <i class="fas fa-edit edit"></i>
                        </a>
                        <a href="@Url.Action("Details","ChucVus", new { id = item.MaCV })">
                            <i class="fas fa-eye view"></i>
                        </a>
                        <a href="@Url.Action("Delete","ChucVus", new { id = item.MaCV })">
                            <i class="fas fa-trash delete"></i>
                        </a>
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>

