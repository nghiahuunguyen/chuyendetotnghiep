@model chuyende.Models.Hang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-container">
    <h3>Bạn có chắc chắn muốn xóa mục này không?</h3>

    <table>
        <thead>
            <tr>
                <th>Tên hãng</th>
                <th>Logo</th>
                <th>Số điện thoại</th>
            </tr>
        </thead>
        <tbody>
        <td>@Html.DisplayFor(model => model.TenHang)</td>
        <td>
            @if (!string.IsNullOrEmpty(Model.Logo))
            {
                <img src="@Url.Content("~/img/hang/" +Model.Logo)" alt="Logo" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>No logo</span>
            }
        </td>
        <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
        </tbody>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <button type="submit" class="delete">Xác nhận</button>
            <button type="button" class="cancel-btn btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Hangs")'">Hủy</button>

        </div>
    }

</div>